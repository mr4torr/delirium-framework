{
    "name": "delirium/core",
    "description": "Core component of Delirium Framework",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Delirium\\Core\\": "src/",
            "Delirium\\DI\\": "../dependency-injection/src/",
            "Delirium\\Http\\": "../http-router/src/",
            "Delirium\\Validation\\": "../validation/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Delirium\\Core\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "ext-swoole": "*",
        "psr/http-message": "^2.0",
        "psr/container": "^2.0",
        "symfony/dependency-injection": "^8.0",
        "symfony/config": "^8.0",
        "nyholm/psr7": "^1.8",
        "symfony/console": "^8.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}