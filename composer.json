{
    "name": "delirium/framework",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Delirium\\Core\\": "packages/core/src/",
            "Delirium\\Http\\": "packages/http-router/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {}
    },
    "authors": [
        {
            "name": "Mailon Torres",
            "email": "mr4torr@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "openswoole/core": "^22.2",
        "psr/http-message": "^2.0",
        "psr/container": "^2.0",
        "nyholm/psr7": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "carthage-software/mago": "^1.0",
        "openswoole/ide-helper": "^22.1"
    },
    "scripts": {
        "lint": "mago lint",
        "analyze": "mago analyze",
        "fmt": "mago fmt",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}