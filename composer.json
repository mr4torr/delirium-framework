{
    "name": "delirium/framework",
    "type": "library",
    "keywords": [
        "framework",
        "swoole",
        "async",
        "php"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Delirium\\Core\\": "packages/core/src/",
            "Delirium\\Http\\": "packages/http-router/src/",
            "Delirium\\DI\\": "packages/dependency-injection/src/",
            "Delirium\\DevTools\\": "packages/dev-tools/src/",
            "Delirium\\Validation\\": "packages/validation/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Delirium\\Core\\Tests\\": "packages/core/tests/",
            "Delirium\\Http\\Tests\\": "packages/http-router/tests/",
            "Delirium\\DI\\Tests\\": "packages/dependency-injection/tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "packages/core"
        },
        {
            "type": "path",
            "url": "packages/http-router"
        },
        {
            "type": "path",
            "url": "packages/dependency-injection"
        },
        {
            "type": "path",
            "url": "packages/validation"
        }
    ],
    "authors": [
        {
            "name": "Mailon Torres",
            "email": "mr4torr@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-swoole": "*",
        "delirium/core": "*",
        "delirium/http-router": "*",
        "delirium/dependency-injection": "*",
        "delirium/validation": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "carthage-software/mago": "^1.0",
        "swoole/ide-helper": "^6.0",
        "symfony/var-dumper": "^8.0"
    },
    "scripts": {
        "lint": "mago lint",
        "analyze": "mago analyze",
        "fmt": "mago fmt",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}